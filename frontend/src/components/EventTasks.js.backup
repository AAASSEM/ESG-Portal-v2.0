import React, { useState, useEffect } from 'react';
import { useAuth } from '../context/AuthContext';
import { API_BASE_URL } from '../config';

const EventTasks = () => {
  const { selectedCompany } = useAuth();
  const [eventTasksData, setEventTasksData] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [selectedTask, setSelectedTask] = useState(null);
  const [showSubmissionModal, setShowSubmissionModal] = useState(false);
  const [formData, setFormData] = useState({
    value: '',
    notes: '',
    evidence_file: null
  });
  const [submitting, setSubmitting] = useState(false);

  // Event type icons and colors
  const eventConfig = {
    'on_installation': {
      icon: 'ğŸ”§',
      label: 'On Installation',
      color: 'blue',
      description: 'Tasks when equipment is installed'
    },
    'on_purchase': {
      icon: 'ğŸ›’',
      label: 'On Purchase',
      color: 'green',
      description: 'Tasks when items are purchased'
    },
    'on_change': {
      icon: 'ğŸ”„',
      label: 'On Change',
      color: 'orange',
      description: 'Tasks when systems change'
    },
    'on_menu_change': {
      icon: 'ğŸ“‹',
      label: 'On Menu Change',
      color: 'purple',
      description: 'Tasks when menu changes'
    },
    'on_implementation': {
      icon: 'ğŸ—ï¸',
      label: 'On Implementation',
      color: 'teal',
      description: 'Tasks during implementation'
    }
  };

  useEffect(() => {
    loadEventTasks();
  }, [selectedCompany]);

  const loadEventTasks = async () => {
    if (!selectedCompany?.id) {
      setError('No company selected');
      setLoading(false);
      return;
    }

    try {
      setLoading(true);
      const response = await fetch(
        `${API_BASE_URL}/api/data-collection/event_tasks/?company_id=${selectedCompany.id}`,
        {
          credentials: 'include',
          headers: {
            'Content-Type': 'application/json',
          }
        }
      );

      if (response.ok) {
        const data = await response.json();
        setEventTasksData(data);
      } else {
        const errorData = await response.json();
        setError(errorData.error || 'Failed to load event tasks');
      }
    } catch (error) {
      console.error('Error loading event tasks:', error);
      setError('Network error loading event tasks');
    } finally {
      setLoading(false);
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!selectedTask) return;

    setSubmitting(true);
    try {
      const formDataObj = new FormData();
      formDataObj.append('value', formData.value || '1');
      formDataObj.append('notes', formData.notes);
      if (formData.evidence_file) {
        formDataObj.append('evidence_file', formData.evidence_file);
      }
      formDataObj.append('company_id', selectedCompany.id);
      formDataObj.append('reporting_year', new Date().getFullYear());
      formDataObj.append('reporting_period', new Date().toLocaleString('default', { month: 'short' }));

      const response = await fetch(`${API_BASE_URL}/api/data-submissions/`, {
        method: 'POST',
        credentials: 'include',
        body: formDataObj
      });

      if (response.ok) {
        alert('Task submitted successfully!');
        setShowSubmissionModal(false);
        setSelectedTask(null);
        setFormData({ value: '', notes: '', evidence_file: null });
        loadEventTasks(); // Reload tasks
      } else {
        const errorData = await response.json();
        alert(`Error: ${errorData.error || 'Failed to submit task'}`);
      }
    } catch (error) {
      console.error('Error submitting task:', error);
      alert('Network error submitting task');
    } finally {
      setSubmitting(false);
    }
  };

  const openSubmissionModal = (task) => {
    setSelectedTask(task);
    setFormData({
      value: task.latest_submission?.value || '1',
      notes: task.latest_submission?.notes || '',
      evidence_file: null
    });
    setShowSubmissionModal(true);
  };

  if (loading) {
    return (
      <div className="flex items-center justify-center py-12">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
        <strong className="font-medium">Error:</strong> {error}
      </div>
    );
  }

  if (!eventTasksData || eventTasksData.total_count === 0) {
    return (
      <div className="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
        <div className="text-6xl mb-4">ğŸ¯</div>
        <h3 className="text-lg font-semibold text-gray-900 mb-2">No Event-Based Tasks</h3>
        <p className="text-gray-600">
          Your company doesn't have any event-based tasks assigned yet.
        </p>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      {/* Summary Header */}
      <div className="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-6 text-white">
        <div className="flex items-center justify-between">
          <div>
            <h2 className="text-2xl font-bold mb-2">ğŸ¯ Event-Based Tasks</h2>
            <p className="text-blue-100">One-time tasks triggered by events</p>
          </div>
          <div className="flex gap-4">
            <div className="text-center">
              <div className="text-3xl font-bold">{eventTasksData.total_count}</div>
              <div className="text-sm text-blue-100">Total</div>
            </div>
            <div className="text-center">
              <div className="text-3xl font-bold text-green-300">{eventTasksData.completed_count}</div>
              <div className="text-sm text-blue-100">Completed</div>
            </div>
            <div className="text-center">
              <div className="text-3xl font-bold text-yellow-300">{eventTasksData.pending_count}</div>
              <div className="text-sm text-blue-100">Pending</div>
            </div>
          </div>
        </div>
      </div>

      {/* Tasks grouped by event type */}
      {Object.entries(eventTasksData.grouped_tasks).map(([cadence, tasks]) => {
        if (tasks.length === 0) return null;
        const config = eventConfig[cadence];

        return (
          <div key={cadence} className="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <div className={`bg-${config.color}-50 border-b border-${config.color}-200 px-6 py-4`}>
              <div className="flex items-center gap-3">
                <span className="text-3xl">{config.icon}</span>
                <div>
                  <h3 className="text-lg font-semibold text-gray-900">{config.label}</h3>
                  <p className="text-sm text-gray-600">{config.description}</p>
                </div>
                <span className="ml-auto bg-white px-3 py-1 rounded-full text-sm font-medium text-gray-700">
                  {tasks.length} {tasks.length === 1 ? 'task' : 'tasks'}
                </span>
              </div>
            </div>

            <div className="divide-y divide-gray-200">
              {tasks.map((task) => (
                <div key={task.element_id} className="p-6 hover:bg-gray-50 transition-colors">
                  <div className="flex items-start justify-between">
                    <div className="flex-1">
                      <div className="flex items-center gap-2 mb-2">
                        <h4 className="font-semibold text-gray-900">{task.element_name}</h4>
                        {task.is_required && (
                          <span className="px-2 py-1 bg-red-100 text-red-700 text-xs rounded">Required</span>
                        )}
                        {task.is_completed && (
                          <span className="px-2 py-1 bg-green-100 text-green-700 text-xs rounded">âœ“ Completed</span>
                        )}
                      </div>
                      <p className="text-sm text-gray-600 mb-3">{task.element_description}</p>
                      <div className="flex items-center gap-4 text-sm text-gray-500">
                        <span>ğŸ“ {task.element_category}</span>
                        {task.element_unit && <span>ğŸ“ Unit: {task.element_unit}</span>}
                        {task.assigned_user && (
                          <span>ğŸ‘¤ {task.assigned_user.username}</span>
                        )}
                      </div>

                      {task.latest_submission && (
                        <div className="mt-4 p-4 bg-gray-50 rounded-lg">
                          <div className="text-sm">
                            <div className="font-medium text-gray-700 mb-1">Latest Submission</div>
                            <div className="text-gray-600">
                              Value: {task.latest_submission.value}
                              {task.latest_submission.notes && (
                                <span className="ml-4">Notes: {task.latest_submission.notes}</span>
                              )}
                            </div>
                            <div className="text-xs text-gray-500 mt-1">
                              Submitted: {new Date(task.latest_submission.submitted_at).toLocaleDateString()}
                              {task.latest_submission.submitted_by && (
                                <span> by {task.latest_submission.submitted_by}</span>
                              )}
                            </div>
                          </div>
                        </div>
                      )}
                    </div>

                    <button
                      onClick={() => openSubmissionModal(task)}
                      className={`ml-4 px-4 py-2 rounded-lg font-medium transition-colors ${
                        task.is_completed
                          ? 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                          : 'bg-blue-600 text-white hover:bg-blue-700'
                      }`}
                    >
                      {task.is_completed ? 'Update' : 'Complete Task'}
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        );
      })}

      {/* Submission Modal */}
      {showSubmissionModal && selectedTask && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
          <div className="bg-white rounded-lg p-6 max-w-md w-full mx-4">
            <h3 className="text-lg font-semibold text-gray-900 mb-4">
              Submit: {selectedTask.element_name}
            </h3>

            <form onSubmit={handleSubmit}>
              <div className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Value
                  </label>
                  <input
                    type="text"
                    value={formData.value}
                    onChange={(e) => setFormData({ ...formData, value: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="Enter value"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Notes (Optional)
                  </label>
                  <textarea
                    value={formData.notes}
                    onChange={(e) => setFormData({ ...formData, notes: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    rows="3"
                    placeholder="Add notes..."
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Evidence File (Optional)
                  </label>
                  <input
                    type="file"
                    onChange={(e) => setFormData({ ...formData, evidence_file: e.target.files[0] })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  />
                </div>
              </div>

              <div className="flex gap-3 mt-6">
                <button
                  type="submit"
                  disabled={submitting}
                  className="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 disabled:opacity-50 font-medium"
                >
                  {submitting ? 'Submitting...' : 'Submit'}
                </button>
                <button
                  type="button"
                  onClick={() => {
                    setShowSubmissionModal(false);
                    setSelectedTask(null);
                  }}
                  className="flex-1 bg-gray-100 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-200 font-medium"
                >
                  Cancel
                </button>
              </div>
            </form>
          </div>
        </div>
      )}
    </div>
  );
};

export default EventTasks;
